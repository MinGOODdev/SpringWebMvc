<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.spring.dao.MemberDao">

    <select id="getTime" resultType="String">
        SELECT NOW()
    </select>

    <insert id="insertMember">
        INSERT INTO tb_member (userId, userPw, userName, email)
        VALUES (#{userId}, #{userPw}, #{userName}, #{email})
    </insert>

    <select id="findByUserId" resultType="com.spring.dto.Member">
        SELECT * FROM tb_member
        WHERE userId = #{userId}
    </select>

    <select id="findByUserIdAndUserPw" resultType="com.spring.dto.Member">
        SELECT * FROM tb_member
        WHERE userId = #{userId} AND userPw = #{userPw}
    </select>

</mapper>